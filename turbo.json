{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "VERCEL",
        "CONVEX_URL",
        "NEXT_PUBLIC_CONVEX_URL",
        "MODAL_TOKEN_ID",
        "MODAL_TOKEN_SECRET",
        "ANTHROPIC_API_KEY",
        "NEXT_PUBLIC_API_URL"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".vercel/output/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    }
  }
}
